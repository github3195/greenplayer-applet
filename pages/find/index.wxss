/* pages/find/index.wxss */
.page-fix {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 0 0 2px #c4c4c4;
  z-index: 10;
}
.search-entry {
  flex: 0 0 90rpx;
  box-shadow: 0 0 10px #c4c4c4;
}
.search-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 15rpx;
}
.pages-group-container {
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
}
.pages-group {
  transition: all .2s;
}
.pages {
  flex: 0 0 100%;
  height: 100%;
}
.list-head {
  top: 0;
  left: 0;
  right: 0;
  z-index: 3;
}
.list-container {
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 60rpx;
}
