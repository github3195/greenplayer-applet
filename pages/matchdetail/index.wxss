/* pages/matchDetail/index.wxss */
.head-against {
  background-image: url(//share.greenplayer.cn/share/img/against-bg.png);
  background-size: 100%;
  padding: 40rpx 20rpx;
  color: #fff;
  font-size: 14px;
}
.tab-title {
  padding: 10rpx;
  background: #f0f0f0;
}
.no-feedback {
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}
.feedback-container {
  padding: 20rpx 0 120rpx;
}
.feedback-name-list {
  padding: 0 15rpx;
  width: 33.333333%;
  height: 100%;
  border-right: 1rpx solid #f0f0f0;
}
.player-info {
  margin: 10rpx 0;
}
.player-portrait {
  flex: 0 0 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.feedback {
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  border-top: 1rpx solid #f0f0f0;
  justify-content: space-around;
}
.feedback .feedback-btn {
  flex: 0 0 180rpx;
  padding: 10rpx;
  border-radius: 10rpx;
}

